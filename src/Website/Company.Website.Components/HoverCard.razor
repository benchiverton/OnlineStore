<div class="card img-fluid hover-card">
    <img class="card-img-top" src="@BackgroundImageLocation" alt="Card image">
    <div class="card-img-overlay">
        <div style="height: 40%" />
        <h1 class="card-title">@Title</h1>
    </div>
    <div class="card-img-overlay-hover">
        <div style="height: 30%" />
        <h5 class="card-title">@Headline</h5>
        <a href="@PageLocation" class="btn adopt-button">More information</a>
        <p class="card-text">@Description</p>
    </div>
</div>

@code
{
    [Parameter]
    public string BackgroundImageLocation { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Headline { get; set; }
    [Parameter]
    public string Description { get; set; }
    [Parameter]
    public string PageLocation { get; set; }
}
