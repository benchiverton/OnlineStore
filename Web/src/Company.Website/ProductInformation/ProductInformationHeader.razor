@inject ProductInformationService ProductInformationService

<div class="img-fluid" style="max-height:500px; overflow: hidden">
    <img class="img-top" src="\images\products\@(ProductId).png" alt="image" style="width: 100%; height: 40vh; object-fit: cover">
</div>

@code {
    [Parameter]
    public string ProductId { get; set; }

    private ProductInformation productInformation { get; set; }

    protected override async Task OnInitializedAsync()
    {
        productInformation = await ProductInformationService.GetProductInformationById(ProductId);
    }
}
